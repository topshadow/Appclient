<script type="text/x-jquery-tmpl" id="itemdata">
	<li>
		<a href="${link}" class="item-content external">
			<div class="item-media">
				<img src='${headpic}' height="50" width="50" alt="">
			</div>
			<div class="item-inner">
				<div class="item-title-row">
					<div class="item-title">${fromname}</div>
					<div class="item-after">
						<div class="item-time">${createtime}</div>
					</div>
				</div>
				<div class="item-text">${msg}</div>
				{{if noreadcount == 0}}
					<div class="message-badge" hidden><span class="badge bg-red">${noreadcount}</span></div>
				{{else}}				
					<div class="message-badge"><span class="badge bg-red">${noreadcount}</span></div>					
				{{/if}}
			</div>
			<!--<div class="swipeout-actions-right">
				<a href="#" class="demo-actions">置顶</a><a href="#" class="demo-mark bg-orange">标记未读</a><a href="#" data-confirm="你确定删除该条信息吗?" class="swipeout-delete swipeout-overswipe">删除</a>
			</div>-->
		</a>
		
	</li>
	
	</script>

<script type="text/javascript">
	window.onload = function () {
		var url = location.search;
		$('.view2').attr("href", "message-list.html" + url);
		$('.view3').attr("href", "trends.html" + url);
		$('.view4').attr("href", "more.html" + url);
	}
	var nextkey = "";

	$("#view2").click(function() {

	});

	if ($("#initflag").val() == "1") {
		$("#toPage").val(1);
	}
	$(function (e) {

		more();
	});
    
	function more() {
		$.Frame.Ajax.Ajax({
			url: $.Frame.Config.Constant.ServerUrl + "webim.getmsgsummary.go",
			postdata: {
				usersno: GetQueryString("drsno"),
				usertype: "Doctor",
				keys: $("#keys").val(),
				nextkey: nextkey
			},
			success: function(rtn) {
				if (rtn.issuccess) {
					var dl = rtn.data;
					for (var i = 0; i < dl.length; i++) {
						dl[i].createdate = dl[i].createdt.format("yyyy-MM-dd");
						dl[i].createtime = dl[i].createdt.format("HH:mm");

						console.log("加密fromname:" + window.btoa(unescape(encodeURIComponent(dl[i].fromname))));
						//dl[i].link = "message.html?from=" + dl[i].from + "&to=" + dl[i].to + "&drsno=" + GetQueryString("drsno") + "&headpic=" + dl[i].headpic + "&fromname=" +dl[i].fromname;//"&headpic" + dl[i].headpic
						dl[i].link = "message.html?drsno=" + GetQueryString("drsno") + "&customersno=" + dl[i].customersno;
						console.log(dl[i].link);
					}

					$("#more").remove();
					$("#itemdata").tmpl(dl).appendTo("#historylist");
					if (rtn.totalpage > parseInt($("#toPage").val())) {
						$("#toPage").val(parseInt($("#toPage").val()) + 1);
					}
					//nextkey = rtn.nextkey;
					$("#initflag").val("0");

				} else {
					$.Frame.Message.ShowMsg(rtn.msg);
				}
			}
		});
	}
</script>

