.page-content {background-color:#f2f3f4}
.list-block .item-inner::after {height:0 !important}
.list-block .list-group ul::after {height:0}


/**===我的患者===**/

.Search-bar {padding: 10px 13px 10px 13px;background-color: #f2f3f4;position: relative;margin-top:44px;border-bottom: 1px solid #ccc;}
.Search-bar label {position: absolute;top: 14px;left: 18px;color:#82bdff;font-size:16px;cursor:pointer;}
.Search-bar a {position: absolute;top: 16px;right: 18px;}
.Search-bar a img {width:20px;}
.Search-bar input {border:1px solid #ccc;border-radius:8px;width:100%;height:30px;font-size:14px;text-align:center;padding:0 25px;}

